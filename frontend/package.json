  "license": "MIT",
  "scripts": {
    "start": "gulp main"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "clipboard": "^1.5.16",
    "codemirror": "^5.20.2",
    "diff-match-patch": "^1.0.4",
    "jquery": "^3.5.1",
    "localforage": "^1.4.3",
    "mousetrap": "^1.6.0",
    "primer-css": "^4.4.0",
    "superagent": "^3.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015-rollup": "^1.2.0",
    "del": "^2.2.2",
    "eslint": "^3.10.2",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^2.0.13",
    "gulp-concat": "^2.6.1",
    "gulp-minify": "^0.0.14",
    "gulp-rename": "^1.2.2",
    "gulp-rollup": "^2.5.1",
    "gulp-sass": "^2.3.2",
    "gulp-standard": "^8.0.2",
    "node-sass": "^3.13.0",
    "rollup-plugin-babel": "^2.6.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "Clipboard",
      "CodeMirror",
      "jQuery",
      "localforage",
      "superagent",
      "axios"
    ]
  },
  "paths": {
    "dist": "dist",
    "scripts": {
      "all": "src/scripts/**/*.js",
      "main": "src/scripts/app-view.js",
      "bundle": "app.min.js",
      "vendors": "vendor.min.js",
      "components": {
        "codemirror": "codemirror/lib/codemirror.js",
        "codemirror-mode": "codemirror/mode/clike/clike.js",
        "jquery": "jquery/dist/jquery.slim.js",
        "localforage": "localforage/dist/localforage.js",
        "mousetrap": "mousetrap/mousetrap.js",
        "superagent": "superagent/superagent.js",
        "clipboard": "clipboard/dist/clipboard.min.js",
        "axios": "axios/dist/axios.min.js"
      }
    },
    "styles": {
      "all": "src/styles/**/*.scss",
      "main": "src/styles/style.scss",
      "bundle": "app.min.css",
      "vendors": "vendor.min.css",
      "components": {
        "codemirror": "codemirror/lib/codemirror.css",
        "codemirror-theme": "codemirror/theme/neat.css",
        "primer": "primer-css/build/build.css"
      }
    },
    "config": {
      "gulpfile": "gulpfile.js"
